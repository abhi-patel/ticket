<h1> Login</h1>

<%= form_for @user_session, :url => {:action => "create"} do |f| %>
  <%= @user_session.errors.full_messages %>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email%>
   </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
    </div>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
    </div>
  <div class="field">
    <%= f.submit "Login" %>
    </div>
    <% end%>
